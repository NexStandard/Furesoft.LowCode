<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450" MinWidth="120"
             x:Class="Furesoft.LowCode.Core.Components.Views.MessageBoxView">
  <Grid>
    <Grid.ContextFlyout>
      <Flyout>
        <TextBox Text="{Binding Message, Mode=TwoWay}" Watermark="Message" />
      </Flyout>
    </Grid.ContextFlyout>
    
    <Rectangle Classes="node" />
    
    <TextBlock Text="MessageBox" HorizontalAlignment="Center" VerticalAlignment="Center" />
  </Grid>
</UserControl>
